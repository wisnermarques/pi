    <% dados.forEach(dado => { %>  
        <div class="card mt-3">
            <div class="card-header">
                <h4><%= dado.nome %></h4>
            </div>
            <div class="card-body">
                <p><%= dado.descricao %></p>
                <h5>R$<%= dado.preco %></h5>
                <div class="row">
                    <div class="col-6">
                        <img class="img-fluid" src="<%= dado.img %>" alt="<%= dado.nome %>">
                    </div>
                </div>
            </div>
        </div>
    <% }) %>
    <hr>
